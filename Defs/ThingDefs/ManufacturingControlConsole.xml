<?xml version="1.0" encoding="utf-8" ?>
<Buildings>


  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
  </ThingDef>

  <!-- Control Console -->
  <ThingDef ParentName="BuildingBase">
    <defName>MD2ManufacturingControlConsole</defName>
    <label>control console</label>
    <description>control console.</description>
    <thingClass>MD2.ManufacturingControlConsole</thingClass>
    <graphicPath>Buildings/ManufacturingConsole</graphicPath>
    <graphicClass>Graphic_Single</graphicClass>
    <altitudeLayer>Waist</altitudeLayer>
    <passability>Impassable</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.7</fillPercent>
    <statBases>
      <WorkToMake>500</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(3,2)</size>
    <comps>
      <li>
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>1</basePowerConsumption>
        <transmitsPower>false</transmitsPower>
      </li>
    </comps>
    <costList>
      <Steel>800</Steel>
      <MD2Circuitry>100</MD2Circuitry>
      <Uranium>25</Uranium>
    </costList>
    <tickerType>Normal</tickerType>
    <rotatable>true</rotatable>
    <neverMultiSelect>true</neverMultiSelect>
    <killedLeavings>
      <ChunkSlagSteel>1</ChunkSlagSteel>
    </killedLeavings>
    <filthLeaving>BuildingRubble</filthLeaving>
    <designationCategory>Production</designationCategory>
    <staticSunShadowHeight>0.3</staticSunShadowHeight>
    <itemSurface>false</itemSurface>
    <placeWorkers>
      <li>MD2.PlaceWorker_SingleConsole</li>
    </placeWorkers>
    <researchPrerequisite>MD2ManufacturingPlant</researchPrerequisite>
  </ThingDef>

</Buildings>